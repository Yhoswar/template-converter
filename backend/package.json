{
  "name": "template-converter-backend",
  "version": "1.0.0",
  "description": "Backend para conversión automática de templates HTML a PHP",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:all",
    "test:validators": "node test-validators.js",
    "test:slugify": "node test-slugify.js",
    "test:menu": "node test-menu-parser.js",
    "test:html": "node test-html-parser.js",
    "test:claude": "node test-claude.js",
    "test:all": "node test-validators.js && node test-slugify.js && node test-menu-parser.js && node test-html-parser.js"
  },
  "keywords": [
    "template",
    "converter",
    "html",
    "php",
    "claude",
    "ai"
  ],
  "author": "Yhoswar",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "archiver": "^7.0.1",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.5",
    "unzipper": "^0.12.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}
